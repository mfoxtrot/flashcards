<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= label_tag "Email" %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag "Пароль" %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Войти" %>
  </div>
<% end %>
<%= link_to "Новый пользователь", new_user_path %>
