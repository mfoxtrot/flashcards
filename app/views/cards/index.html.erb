<table class="table table-bordered">
  <thead>
    <tr>
      <th>id</th>
      <th>Оригинал</th>
      <th>Перевод</th>
      <th>Дата проверки</th>
      <th>Создано</th>
      <th>Правка</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.original_text %></td>
        <td><%= c.translated_text %></td>
        <td><%= c.review_date.strftime("%d.%m.%Y")if !c.review_date.nil? %> </td>
        <td><%= c.created_at.strftime("%d.%m.%Y %H:%M:%S") %></td>
        <td><%= c.updated_at.strftime("%d.%m.%Y %H:%M:%S") %></td>
        <td>
          <%= link_to "Удалить", card_path(c.id), method: :delete,data: {confirm: "Вы уверены?"}, class: "btn btn-danger" %><br>
          <%= link_to "Редактировать", edit_card_path(c.id), method: :get, class: "btn btn-primary" %><br>
          <%= link_to "Просмотр", card_path(c.id), method: :get, class: "btn btn-info" %><br>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
